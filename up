#!/bin/sh

cd $(cd $(dirname $0); pwd)
lc_temp=.tmp
reload=${lc_temp}/.reload
[ ! -d ${lc_temp} ] && mkdir ${lc_temp}
[ -f ${reload} ] && rm ${reload}

vagrant up --no-provision
echo 'Reloading...'
vagrant reload --provision

while [ -f ${reload} ]
do
    echo 'Reloading...'
    rm ${reload}
    vagrant reload --provision
done
